<%- model_class = Item -%>
<section>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <div class="well">
    <form action="/" class="form-inline" id="filters-form">
      <%= select_tag(:quality, options_for_select(@qualities), prompt: "Quality") %>
      <%= select_tag(:rarity, options_for_select(@rarities), prompt: "Rarity") %>
      <%= select_tag(:item_type, options_for_select(@item_types), prompt: "Item Type") %>
      <%= select_tag(:hero, options_for_select(@heroes), prompt: "Hero") %>
      <%= button_tag 'Filter', type: 'submit', class: 'btn' %>
      &nbsp;&nbsp;<%= link_to "clear filters", root_path %>
    </form>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:quantity) %></th>
        <th><%= model_class.human_attribute_name(:starting_price) %></th>
        <th><%= model_class.human_attribute_name(:quality) %></th>
        <th><%= model_class.human_attribute_name(:rarity) %></th>
        <th><%= model_class.human_attribute_name(:item_type) %></th>
        <th><%= model_class.human_attribute_name(:hero) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan="10" class="ts-pager form-horizontal">
          <%= paginate @items %>
        </th>
      </tr>
    </tfoot>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.id, item_path(item) %></td>
          <td></td>
          <td><%= item.title %></td>
          <td><%= item.quantity %></td>
          <td><%= item.starting_price.format(with_currency: true) %></td>
          <td><%= item.quality %></td>
          <td><%= item.rarity %></td>
          <td><%= item.item_type %></td>
          <td><%= item.hero %></td>
          <td><%= link_to "See on STEAM", item.url %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
